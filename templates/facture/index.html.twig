<style>
    body {
        font-family: Arial, sans-serif;
        margin: 50px;
        padding: 20px;
    }
    h1{
        text-align: center;
    }

	table {
		width: 100%;
		border-collapse: collapse;
	}
	th,
	td {
		padding: 15px;
		text-align: left;
		border-bottom: 1px solid #ddd;
	}
	th {
		background-color: #f2f2f2;
	}
	td:nth-child(even) {
		background-color: #f9f9f9;
	}
    hr {
    width: 100%;
    height: 3px;
    background-color: #000;
    border: none;
    margin: 20px auto;
}
</style>

<div class="container">

    <img class="logo" src="{{ asset('uploads/images/WPreParfumerlogo.png') }}" alt="Logo du site PreParfumer" style="width: 100px; height: 100px;">

	<h1>PreParfumer-Facture :</h1>

	{% include('includes/_flash_message.html.twig') %}
	<hr>
	<h3>Facture n°
		{{ commande.id }}</h3>
	<span>Date de la commande :
		{{ commande.createdAt|date('d/m/Y') }}</span>
	<hr>
	<h3>Informations du client</h3>
	<table class="table table-bordered">

		<tr>
			<th>Nom</th>
			<th>Prénom</th>
			<th>Téléphone</th>
			<th>Adresse</th>
			<th>Ville</th>
		</tr>

		<tr>
			<td>{{ commande.nom }}</td>
			<td>{{ commande.prenom }}</td>
			<td>{{ commande.telephone }}</td>
			<td>{{ commande.adresse }}</td>
			<td>{{ commande.ville.nom }}</td>
		</tr>
	</table>


	<hr>
	<h3>Recapitulatif de la commande</h3>
	<table class="table table-bordered">
		<tr>
			<th>Nom du produit</th>
			<th>Prix unitaire</th>
			<th>Quantité</th>
			<th>Prix total</th>
		</tr>

		{% for produit in commande.commandeProduits %}
			<tr>
				<td>{{ produit.produit.nom }}</td>
				<td>{{ produit.produit.prix }}€</td>
				<td>{{ produit.quantite }}</td>
				<td>{{ produit.produit.prix * produit.quantite }}€</td>
			</tr>
		{% endfor %}

	</table>
	<hr>
	<table class="table table-bordered">
		<th>
			<h3>Total de la commande :
				{{ commande.prixTotal }}
				€</h3>
		</th>
		<th>
			<h3>Frais de livraison :
				{{ commande.ville.fraisDePort }}
				€</h3>
		</th>
		<th>
			<h3>Total à payer :
				{{ commande.prixTotal + commande.ville.fraisDePort }}
				€</h3>
		</th>
	</table>
</div>
