{% extends 'base.html.twig' %}

{% block title %}Produit
{% endblock %}

{% block body %}
	<div class="container"><br><br>
		<h1 class="h1Twig">Produit</h1><br>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ produit.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ produit.Nom }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ produit.Description }}</td>
				</tr>
				<tr>
					<th>Prix</th>
					<td>{{ produit.Prix }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_produit_index') }}" class="btn btn-primary m-1">Retour à la liste</a>

		<a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-success m-1">Éditer</a>

		<a href="{{ path('app_produit_stock_ajout_historique', {'id': produit.id}) }}" class="btn btn-outline-success m-1">Afficher l'historique du stock</a>


		{{ include('produit/_delete_form.html.twig') }}
	</div>
{% endblock %}
