{% extends 'base.html.twig' %}

{% block title %}Utilisateur
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="h1Twig">Utilisateur</h1>

		<table class="table">
			<tbody class="table-group-divider">
				<tr>
					<th>Id</th>
					<td>{{ utilisateur.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ utilisateur.Nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ utilisateur.Prenom }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ utilisateur.email }}</td>
				</tr>
				<tr>
					<th>Rôles</th>
					<td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_utilisateur_index') }}" class="btn btn-primary m-1">Retour à la liste</a>

		<a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-success m-1">Éditer</a>

		{{ include('utilisateur/_delete_form.html.twig') }}
	</div>
{% endblock %}
