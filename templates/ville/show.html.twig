{% extends 'base.html.twig' %}

{% block title %}Ville
{% endblock %}

{% block body %}
	<div class="container">
		<div class="table_reponsive">
			<h1 class="h1Twig">Ville</h1>

			<table class="table table-bordered table-group-divider">

				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ ville.id }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ ville.nom }}</td>
					</tr>
					<tr>
						<th>FraisDePort</th>
						<td>{{ ville.fraisDePort }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_ville_index') }}" class="btn btn-primary m-1">Retour à la liste</a>

			<a href="{{ path('app_ville_edit', {'id': ville.id}) }}" class="btn btn-success m-1">Éditer</a>

			{{ include('ville/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
