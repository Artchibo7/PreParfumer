{% extends 'base.html.twig' %}

{% block title %}Villes
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="h1Twig">Villes</h1>

		{% include('Includes/_flash_message.html.twig') %}

		<div class="table-responsive">

			<table class="table table-bordered table-group-divider">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nom</th>
						<th>FraisDePort</th>
						<th>actions</th>
					</tr>
				</thead>
				<tbody>
					{% for ville in villes %}
						<tr>
							<td>{{ ville.id }}</td>
							<td>{{ ville.nom }}</td>
							<td>{{ ville.fraisDePort }}</td>
							<td>
								<a href="{{ path('app_ville_show', {'id': ville.id}) }}" class="btn btn-primary m-1">Voir</a>
								<a href="{{ path('app_ville_edit', {'id': ville.id}) }}" class="btn btn-success m-1">Éditer</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">Aucun enregistrement</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<a href="{{ path('app_ville_new') }}" class="btn btn-warning m-1">Créer une nouvelle ville</a>
		</div>
	</div>
{% endblock %}
