{% extends 'base.html.twig' %}

{% block title %}Catégorie index
{% endblock %}

{% block body %}
	<div class="container"><br><br>
	
		<h1 class="h1Twig">Catégories</h1><br><br>

		{% include('Includes/_flash_message.html.twig') %}

		<table class="table">
			<thead class="table-group-divider">
				<tr>
					<th>Nom</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody class="table-group-divider">
				{% for categorie in categories %}
					<tr>
						<td>{{ categorie.Nom }}</td>
						<td>
							<a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-primary m-1">Voir</a>
							<a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-success m-1">Éditer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucun enregistrement</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_categorie_new') }}" class="btn btn-warning m-1">Créer une nouvelle catégorie</a>
	</div>
{% endblock %}
