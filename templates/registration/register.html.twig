{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container securite-form">
		<div class="login-form">
			{% include('Includes/_flash_message.html.twig') %}
			{# {% for label, messages in app.flashes %}
			    <div class="alert alert-{{ label }}">
			        {% for message in messages %}
			            {{ message }}
			        {% endfor %}
			    </div>
			{% endfor %} #}


			<h1>Inscription</h1>

			{{ form_errors(registrationForm) }}

			{{ form_start(registrationForm) }}
			<br>
			{{ form_widget(registrationForm.nom, {'attr': {'class':'form form-control', 'placeholder':'Nom'}}) }}
			<br>
			{{ form_widget(registrationForm.prenom, {'attr': {'class':'form form-control', 'placeholder':'Prenom'}}) }}
			<br>
			{{ form_widget(registrationForm.email, {'attr': {'class':'form form-control', 'placeholder':'Email'}}) }}
			<br>
			{{ form_widget(registrationForm.plainPassword, {'attr': {'class':'form form-control', 'placeholder':'Mot de passe'}}) }}
			<br>
			<div class="d-flex align-items-center">
				<label for="agreeTerms" class="ms-2">Accepter les conditions</label>
				{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'id': 'agreeTerms', 'style': 'margin-left: 10px;'}}) }}
			</div><br>

			<button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
