{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="h1Twig">Nos produits</h1>

		<div class="row">

			{% for produit in produits %}
				<div class="col-md-3 mt-3">

					<div class="card" style="width: 18rem;">
						<img src="" class="card-img-top" alt="...">
						<div class="card-body">
							<a href="{{ path('app_home_produit_show', {'id': produit.id}) }}"><h5 class="card-title">{{ produit.Nom }}</h5></a>
							<p class="card-text">{{ produit.Description|slice(0, 50) }} ...</p>
							<a href="#" class="btn btn-outline-success m-1">Ajouter au panier</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
