{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="h1Twig">Nos produits</h1>

		{% include('Includes/_flash_message.html.twig') %}

		<div class="row">

			{% for produit in produits %}
				<div class="col-md-3 mt-4">

					<div class="card" style="">
						<img src="{{produit.image}}" class="card-img-top" alt="...">
						<div class="card-body">
							<a style="text-decoration: none" href="{{ path('app_home_produit_show', {'id': produit.id}) }}"><h5 class="card-title">{{ produit.Nom }}</h5></a>
							<p class="card-text">{{ produit.Description|slice(0, 50) }} ...</p>
							<h5>{{produit.Prix}}â‚¬</h5>
							<a href="{{ path('app_panier_new', {'id': produit.id}) }}" class="btn btn-outline-success m-1">Ajouter au panier</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div><br><br><br>
		<!-- Pagination -->
		{{knp_pagination_render(produits, 'Includes/pagination.html.twig') }}
	</div>

{% endblock %}

